<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTheme">
        <item name="android:background">#cccccc</item>
    </style>

    <style name="BigAmount" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >@dimen/abc_text_size_button_material</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>

    <style name="buttonDefault">
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="buttonPosi">
        <item name="android:background">@drawable/button_posi</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>

    <style name="buttonPosiFunc">
        <item name="android:background">@drawable/button_posi_func</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>
    <style name="buttonPosiEqual">
        <item name="android:background">@drawable/button_posi_equal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>
    <style name="buttonPosiCharge">
        <item name="android:background">@drawable/button_posi_charge</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>
    <style name="buttonPosiErase">
        <item name="android:background">@drawable/button_posi_erase</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>
    <style name="buttonPosiClear">
        <item name="android:background">@drawable/button_posi_clear</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@mipmap/ic_logo_drawer</item>
        <item name="android:actionBarStyle">@style/vasinnActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/vasinnActionBar</item>
        <item name="homeAsUpIndicator">@mipmap/ic_logo_drawer</item>
    </style>

    <style name="OthersActivityTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/vasinnActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/vasinnActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="vasinnActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/default_dialog_button_bg</item>

        <!-- Support library compatibility -->
        <item name="background">@color/default_dialog_button_bg</item>
    </style>

</resources>
